<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <attr name="scrollMode" >
        <enum name="alignScroll" value="0"/>
        <enum name="followScroll" value="1"/>
        <enum name="normalScroll" value="2" />
    </attr>

    <declare-styleable name="TvRecyclerView">
        <attr name="scrollMode"/>
        <attr name="focusDrawable" format="reference" />
        <attr name="isAutoProcessFocus" format="boolean" />
        <attr name="focusScale" format="float" />
        <attr name="focusOutKeepDrawable" format="boolean"/>
    </declare-styleable>

    <!--是否可以缩放-->
    <attr name="needZoom" format="boolean"/>
    <!--是否能获取焦点-->
    <attr name="canFocus" format="boolean"/>
    <!--放大时的缩放倍数-->
    <attr name="scaleNum" format="float|reference"/>
    <!--焦点获取时候的背景selector-->
    <attr name="focusSelector" format="reference"/>
    <!--焦点模式  default,priority,dynamic-->
    <attr name="focusMode" format="string"/>

    <declare-styleable name="CardFrameLayout">
        <!--当查找不到焦点的时候是否抖动-->
        <attr name="open_shake" format="boolean"/>
        <!--自己添加上焦点的动画-->
        <attr name="auto_add_focus_animation" format="boolean"/>
        <!--这个功能暂未实现 焦点的优先级 默认为 -1 没有优先级-->
        <attr name="priority" format="integer"/>
        <attr name="hasFocusBorder" format="boolean"/>
        <attr name="selectBorderWidth" format="dimension"/>
        <attr name="borderColor" format="color"/>
        <attr name="focusChecked" format="boolean"/>
    </declare-styleable>

